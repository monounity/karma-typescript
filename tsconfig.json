{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "ES5",
        "lib": [
            "dom","es5","es6","scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "typings/index.d.ts"
    ]
}
